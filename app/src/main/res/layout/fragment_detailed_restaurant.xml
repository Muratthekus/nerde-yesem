<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/detailedScreenWrapper"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/detailedColor4">

    <!--Card-->
    <androidx.cardview.widget.CardView
        android:id="@+id/detailedCardView"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_centerInParent="true"
        android:visibility="invisible"
        android:elevation="2dp"
        android:layout_marginStart="50dp"
        app:cardCornerRadius="15dp"
        android:background="@color/appBackground">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingTop="10dp">
            <TextView
                android:id="@+id/restName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="5dp"
                android:text="Restaurant Adı"
                android:textStyle="bold"
                android:textSize="20sp"
                style="@style/TextAppearance.AppCompat.Body1"/>
            <TextView
                android:id="@+id/restCuisines"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/restName"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:text="-Mutfak-"
                android:textSize="16sp"/>
            <TextView
                android:id="@+id/restLocation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Kültür Mahallesi, Mustafabey Caddesi, No 24, Konak, İzmir"
                android:drawableStart="@drawable/ic_location_on_black_24dp"
                android:textStyle="normal"
                android:padding="5dp"
                style="@style/TextAppearance.AppCompat.Body1"
                app:layout_constraintTop_toBottomOf="@id/restCuisines"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"/>
            <LinearLayout
                android:id="@+id/restStatPlainText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/restLocation"
                android:orientation="horizontal"
                android:showDividers="middle"
                android:divider="@drawable/vertical_divider"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/timingPlainText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:textColor="@color/green"
                    android:drawableLeft="@drawable/ic_access_time_black_24dp"
                    android:padding="2dp"
                    android:text="Çalışma"
                    style="@style/TextAppearance.AppCompat.Body1"/>
                <TextView
                    android:id="@+id/votePlainText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Oylama"
                    android:drawableLeft="@drawable/ic_star_black_24dp"
                    android:padding="2dp"
                    android:textColor="@color/green"
                    android:gravity="center"
                    android:layout_weight="1"
                    style="@style/TextAppearance.AppCompat.Body1"/>
                <TextView
                    android:id="@+id/avgCostFor2PlainText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Ücret (2 kişi)"
                    android:drawableLeft="@drawable/ic_monetization_on_black_24dp"
                    android:padding="2dp"
                    android:textColor="@color/green"
                    android:layout_weight="1"
                    style="@style/TextAppearance.AppCompat.Body1"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/restStat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/restStatPlainText"
                android:orientation="horizontal"
                android:showDividers="middle"
                android:divider="@drawable/vertical_divider"
                android:layout_marginTop="5dp">
                <TextView
                    android:id="@+id/restTiming"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center"
                    style="@style/TextAppearance.AppCompat.Body1"/>
                <TextView
                    android:id="@+id/restVotes"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    style="@style/TextAppearance.AppCompat.Body1"/>
                <TextView
                    android:id="@+id/restAvgCost"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1"
                    style="@style/TextAppearance.AppCompat.Body1"/>
            </LinearLayout>
            <TextView
                android:id="@+id/restPhone"
                android:drawableStart="@drawable/ic_phone_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/restStat"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="10dp"
                style="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp"
                android:text="Telefon: XXX-XXX-XXX-XX"/>
            <TextView
                android:id="@+id/restHighlight"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/restPhone"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="5dp"
                android:drawableLeft="@drawable/ic_whatshot_black_24dp"
                android:text="Öne çıkanlar"
                android:gravity="center"
                style="@style/TextAppearance.AppCompat.Body1"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="horizontal"
                app:layout_constraintBottom_toTopOf="@+id/userRatingText"
                app:layout_constraintTop_toBottomOf="@id/restHighlight">
                <LinearLayout
                    android:id="@+id/restHighlightFRow"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_weight="1"/>
                <LinearLayout
                    android:id="@+id/restHighlightSRow"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingStart="5dp"
                    android:paddingEnd="5dp"
                    android:layout_weight="1"/>
            </LinearLayout>
            <TextView
                android:id="@+id/userRatingText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:textColor="@color/white"
                android:gravity="center"
                android:text="Mükemmel"
                android:textStyle="bold"
                android:textSize="16sp"
                android:background="@drawable/detailed_bottom_userrating"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>
    <ProgressBar
        android:id="@+id/loadingComponent"
        android:layout_width="89dp"
        android:layout_height="89dp"
        android:layout_marginTop="296dp"
        android:indeterminate="true"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/pleaseWaitText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="@string/please_wait"
        android:textSize="18sp"
        android:layout_below="@id/loadingComponent"
        android:layout_centerHorizontal="true"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@id/loadingComponent" />
</RelativeLayout>